<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/darkGrey" >

    <TableLayout
        android:id="@+id/TableLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/darkGrey" >

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <TextView
                    android:id="@+id/strap"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Pace/Distance/Time Calculator"
                    android:textColor="@color/white"
                    android:textSize="22sp" />
                <!-- android:width="170dip" android:textSize="18sp" -->
                <!--
                     <Button android:layout_width="fill_parent" android:text="Clear"
					android:layout_height="wrap_content" android:layout_weight="1"
					android:onClick="myClickHandler" android:id="@+id/ClearButton" />
                -->
                <!--
                     <Spinner android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/Spinner02"
					android:layout_toRightOf="@+id/strap" android:prompt="@string/Presets" />
                -->
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/TableRowHelpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/LinearLayoutHelpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >

                <TextView
                    android:id="@+id/strapHelpText"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="8dip"
                    android:text="Enter 2 parameters to calculate the 3rd (e.g. Time and Distance to get Pace)"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
                <!-- android:width="170dip" android:textSize="18sp" -->
                <!--
                     <Button android:layout_width="fill_parent" android:text="Clear"
					android:layout_height="wrap_content" android:layout_weight="1"
					android:onClick="myClickHandler" android:id="@+id/ClearButton" />
                -->
                <!--
                     <Spinner android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/Spinner02"
					android:layout_toRightOf="@+id/strap" android:prompt="@string/Presets" />
                -->
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/topline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/strap"
                    android:text=" Hour"
                    android:width="90dip" />

                <TextView
                    android:id="@+id/topline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/strap"
                    android:layout_toRightOf="@+id/topline1"
                    android:text="Mins"
                    android:width="90dip" />

                <TextView
                    android:id="@+id/topline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/strap"
                    android:layout_toRightOf="@+id/topline2"
                    android:text="Secs" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/TableRow03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/LinearLayout03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/EditText01a"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/strap"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="" />

                <EditText
                    android:id="@+id/EditText01b"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="" />

                <EditText
                    android:id="@+id/EditText01c"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:text="" />

                <Button
                    android:id="@+id/Button01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="myClickHandler"
                    android:text="Calculate\nTime"
                    android:textSize="12sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/TableRow04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/LinearLayout04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/midline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Enter Distance - " />

                <TextView
                    android:id="@+id/midline1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="miles"
                    android:textColor="@color/white" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/TableRow05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/LinearLayout05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/EditText02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLength="9"
                    android:text="@+id/EditText02"
                    android:width="100dip" />

                <Spinner
                    android:id="@+id/SpinnerImperial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:prompt="@string/Presets" 
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/Button02"
                    android:layout_weight="1"
                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/midline1"
                    android:layout_toRightOf="@+id/EditText02"
                    android:minWidth="100dip"
                    android:onClick="myClickHandler"
                    android:text="Calculate\nDistance"
                    android:textSize="12sp"
                    android:width="100dip" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/TableRow06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/LinearLayout06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/topline1b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/strap"
                    android:text=" Hour"
                    android:width="90dip" />

                <TextView
                    android:id="@+id/topline2b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/strap"
                    android:layout_toRightOf="@+id/topline1"
                    android:text="Mins"
                    android:width="90dip" />

                <TextView
                    android:id="@+id/topline3b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/strap"
                    android:layout_toRightOf="@+id/topline2"
                    android:text="Secs" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/TableRow07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/LinearLayout07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/EditText03a"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/strap"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="" />

                <EditText
                    android:id="@+id/EditText03b"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="" />

                <EditText
                    android:id="@+id/EditText03c"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:text="" />

                <Button
                    android:id="@+id/Button03"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="myClickHandler"
                    android:text="Calculate\nPace"
                    android:textSize="12sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/TableRowSwitchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/LinearLayoutSwitchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/ClearButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:onClick="myClickHandler"
                    android:text="Clear fields" />

                <Button
                    android:id="@+id/SwitchMetrics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:text="Switch to kilometres" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/TableRow08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/darkGrey" >

            <LinearLayout
                android:id="@+id/LinearLayout08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/darkGrey" >

                <ListView
                    android:id="@+id/ListView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/darkGrey" />
                <!--
                     <ListView android:id="@+id/ListView02"
					android:layout_weight="1" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_toRightOf="@+id/ListView01"
					android:background="@color/darkGrey2" />
                -->
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>